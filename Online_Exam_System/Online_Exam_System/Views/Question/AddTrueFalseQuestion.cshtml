        margin-bottom: 15px;
        border-radius: 10px;
    }

    .row1 {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: -7.5px;
        margin-left: -7.5px;
        background-color: #cccfcf;
    }

    .card-primary1:not(.card-outline) > .card-header {
        background-color: #5e7e75;
    }



    .form-group.group-1 {
        margin-top: 20px;
        margin-bottom: 20px;
        background-color: #cbd3db;
    }

    .form-group.group-2 {
        margin-top: 5px;
        margin-bottom: 30px;
        background-color: #cbd3db;
    }

