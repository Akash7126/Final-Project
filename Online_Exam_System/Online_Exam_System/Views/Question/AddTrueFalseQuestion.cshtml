    }

    button.btn.btn-block.btn-outline-info.btn-flat.button1 {
        margin-top: 15px;
        margin-bottom: 15px;
        border-radius: 10px;
    }

    .row1 {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: -7.5px;
        margin-left: -7.5px;
        background-color: #cccfcf;
    }

    .card-primary1:not(.card-outline) > .card-header {
        background-color: #5e7e75;
    }

    .col-md-4.cutomize-data {
        margin-left: 84px;
    }

    .form-group.group-1 {
        margin-top: 20px;
        margin-bottom: 30px;
        background-color: #cbd3db;
        height: 40px;
    }

    .form-group.group-2 {
        margin-top: 5px;
        margin-bottom: 30px;
        background-color: #cbd3db;
        height: 40px;
    }

</style>

<div class="card card-primary1">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Set True or False Answer Question</h3>
        </div>
        <form role="form">
            <div class="container">
                <div class="row1">
                    <div class="col-md-2">
                        <a asp-action="AddQestion" asp-controller="Question"><button type="button" class="btn btn-block btn-outline-info btn-flat button1">Single Answer</button></a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="AddMultipleSelectQuestion" asp-controller="Question"><button type="button" class="btn btn-block btn-outline-info btn-flat button1">Multiple Answer</button></a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="AddTrueFalseQuestion" asp-controller="Question"><button type="button" class="btn btn-block btn-outline-info btn-flat button1">True/False</button></a>
                    </div>
                </div>
            </div>

        </form>
        <form role="form">
            <div class="card-body">
                <div class="col-md-4 cutomize-data">
                    <div class="form-group">
                        <label asp-for="CourseId">Course</label>
                        <select class="form-control" asp-for="CourseId" asp-items="@(new SelectList(ViewBag.CourseAssigns2,"CourseId","CourseCode"))">
                            <option>Please select one</option>
                        </select>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <div class="form-group">
                                <textarea id="summernote" name="editordata"></textarea>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group group-1">
                                <input type="radio" class="correct-answer" name="answer"><b>True</b>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group group-2">
                                <input type="radio" class="correct-answer" name="answer"><b>False</b>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-3 justify-content-center custom-dsn3">
                        <a asp-action="AddTrueFalseQuestion" asp-controller="Question"><button type="button" class="btn btn-block bg-gradient-success btn-lg">Save</button></a>


                    </div>
                </div>
        </form>

    </div>
</div>


