                        <a id="multipleAnswerButton" asp-action="AddMultipleSelectQuestion" asp-route-id="@Model.CourseId">
                            <button type="button" class="btn btn-block btn-outline-info btn-flat button1 clicked-button">Multiple Answer</button>
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a id="trueFalseAnswerButton" asp-action="AddTrueFalseQuestion" asp-route-id="@Model.CourseId">
                            <button type="button" class="btn btn-block btn-outline-info btn-flat button1">True/False</button>
                        </a>
                    </div>
                </div>
            </div>
        </form>
        
            <form asp-controller="Question" asp-action="AddQestion" role="form" method="post">
            

            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 cutomize-data">
                        <div class="form-group">
                            <label asp-for="CourseId">Course Code</label>
                            <select id="courseDropdown" class="form-control" asp-for="CourseId" asp-items="@(new SelectList(ViewBag.CourseAssigns,"CourseId","CourseCode"))">
                                <option>Please select one</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-1 customize-data1">
                        <div class="form-group">
                            <label asp-for="Mark">Mark</label>
                            <input asp-for="Mark" type="text" class="form-control" placeholder="mark">
                        </div>
                    
                    </div>
                
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <div class="form-group">
                                <textarea asp-for="QuestionDescription" id="summernote" name="QuestionDescription"></textarea>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <textarea asp-for="Question1" id="summernote1" name="Question1"></textarea>
                            </div>
                            <div class="form-group1">
                                <input type="radio" asp-for="Question1Answer" class="correct-answer background" name="Question1Answer" value="Question1Answer"><b> Correct Answer</b>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <textarea asp-for="Question7" id="summernote7" name="Question7"></textarea>
                            </div>
                            <div class="form-group1">
                                <input type="radio" asp-for="Question7Answer" class="correct-answer" name="Question7Answer" value="Question7Answer"><b> Correct Answer</b>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <textarea asp-for="Question2" id="summernote2" name="Question2"></textarea>
                            </div>
                            <div class="form-group1">
                                <input type="radio" asp-for="Question2Answer" class="correct-answer" name="Question2Answer" value="Question2Answer"><b> Correct Answer</b>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <textarea asp-for="Question3" id="summernote3" name="Question3"></textarea>
                            </div>
                            <div class="form-group1">
                                <input type="radio" asp-for="Question3Answer" class="correct-answer" name="Question3Answer" value="Question3Answer"><b> Correct Answer</b>
                            </div>

                        </div>
                        <input type="hidden" asp-for="Question1Answer" name="Question1Answer" />
                        <input type="hidden" asp-for="Question7Answer" name="Question7Answer" />
                        <input type="hidden" asp-for="Question2Answer" name="Question2Answer" />
                        <input type="hidden" asp-for="Question3Answer" name="Question3Answer" />

                    </div>
                </div>

                <div class="col-md-3 justify-content-center custom-dsn3">
                    <a  asp-action="AddQestion" asp-route-id="@Model.CourseId"><button id="getDataButton" type="submit" class="btn btn-block bg-gradient-success btn-lg">Save</button></a>
                </div>
            </div>
            </form>
        </div>
</div>


