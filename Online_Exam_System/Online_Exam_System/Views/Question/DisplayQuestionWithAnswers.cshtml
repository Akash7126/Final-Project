@model Online_Exam_System.ViewModel.QuestionAnsweViewModel

<h2>Question</h2>
<p>@Model.Question.QuestionDescription</p>

<h2>Answers</h2>
<ul>
    @foreach (var answer in Model.Answers)
    {
        <li>
            @answer.AnswerText
            @if (answer.IsCorrect == true)
            {
                <span>(Correct)</span>
            }
        </li>
    }
</ul>
