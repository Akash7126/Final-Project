                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DepartmentId">Department</label>
                            <select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Departments,"DepartmentId","DepartmentName"))">
                                <option>Please select one</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="BatchName"></label></td>
                            <input class="form-control" type="text" asp-for="BatchName">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="UpdateBatchDetails  " asp-route-id="@Model"><button type="submit" class="btn btn-primary">Submit</button></a>
            </div>
        </form>
    </div>
</div>

