@model Online_Exam_System.Models.Batch
<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Batch Update</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="Batch" asp-action="UpdateBatchDetails" role="form">
